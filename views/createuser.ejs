<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management Dashboard</title>
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/createuser.css">
  <script>
    // Generate a random Sub-User ID (e.g., "SUB-ABC12345")
    function generateSubUserId() {
      const randomId = 'SUB-' + Math.random().toString(36).substring(2, 10).toUpperCase();
      document.getElementById('subUserId').value = randomId;
    }
  </script>
</head>
<style>
  /* Reset & Global Settings */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', 'Segoe UI', sans-serif;
  }

  /* CSS Variables */
  :root {
    --primary-color: #3a7bd5;
    --primary-light: #6faae7;
    --primary-dark: #2c5282;
    --secondary-color: #2dd4bf;
    --accent-color: #f59e0b;
    --danger-color: #ef4444;
    --success-color: #10b981;
    --dark-bg: #1e293b;
    --sidebar-bg: #0f172a;
    --light-bg: #f8fafc;
    --card-bg: #ffffff;
    --text-dark: #1e293b;
    --text-light: #94a3b8;
    --text-white: #f8fafc;
    --border-color: #e2e8f0;
    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    --transition: all 0.3s ease;
    --radius-sm: 0.25rem;
    --radius-md: 0.5rem;
    --radius-lg: 1rem;
  }

  /* Layout */
  body {
    background-color: var(--light-bg);
    color: var(--text-dark);
    line-height: 1.5;
    min-height: 100vh;
    display: flex;
  }

  /* Sidebar */
  .sidebar {
    width: 250px;
    background: var(--sidebar-bg);
    color: var(--text-white);
    padding: 1.5rem 1rem;
    display: flex;
    flex-direction: column;
    position: fixed;
    height: 100%;
    overflow-y: auto;
    transition: var(--transition);
    box-shadow: var(--shadow-lg);
    z-index: 10;
  }

  .sidebar-header {
    padding: 0 1rem 1.5rem;
    text-align: center;
  }

  .sidebar-logo {
    font-size: 22px;
    font-weight: 700;
    margin-bottom: 3px;
    color: var(--text-white);
    letter-spacing: 1px;
  }

  .sidebar-subtitle {
    font-size: 13px;
    color: var(--text-light);
    font-weight: 400;
  }

  .sidebar-menu {
    margin-top: 1.5rem;
    list-style: none;
  }

  .sidebar-menu-item {
    margin-bottom: 0.25rem;
  }

  .sidebar-menu-link {
    display: flex;
    align-items: center;
    padding: 0.75rem;
    color: var(--text-light);
    text-decoration: none;
    border-radius: var(--radius-md);
    transition: var(--transition);
  }

  .sidebar-menu-link:hover,
  .sidebar-menu-link.active {
    background-color: rgba(255, 255, 255, 0.1);
    color: var(--text-white);
  }

  .sidebar-menu-link i {
    margin-right: 0.75rem;
    width: 18px;
    text-align: center;
  }

  .sidebar-footer {
    margin-top: auto;
    padding: 0.75rem;
    font-size: 13px;
    color: var(--text-light);
    text-align: center;
  }

  /* Main Content */
  .main-content {
    flex: 1;
    margin-left: 250px;
    padding: 1.5rem;
    transition: var(--transition);
    width: calc(100% - 250px);
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    width: 100%;
    max-width: 1000px;
  }

  .page-title {
    font-size: 24px;
    font-weight: 700;
    color: var(--text-dark);
  }

  .user-info {
    display: flex;
    align-items: center;
    margin-left: auto;
  }

  .user-avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: var(--primary-color);
    color: var(--text-white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    margin-right: 10px;
  }

  .user-name {
    font-weight: 600;
    font-size: 15px;
  }

  .user-role {
    font-size: 13px;
    color: var(--text-light);
  }

  /* Enhanced Card styling */
  .card {
    background: var(--card-bg);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-md);
    margin-bottom: 1.5rem;
    overflow: hidden;
    max-width: 1000px;
    width: 100%;
  }

  .enhanced-card {
    box-shadow: var(--shadow-lg);
    border-radius: var(--radius-lg);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
    border: 1px solid var(--border-color);
  }

  .enhanced-card:hover {
    box-shadow: var(--shadow-xl);
    transform: translateY(-3px);
  }

  /* Card Header */
  .card-header {
    padding: 1.5rem;
    border-bottom: 1px solid var(--border-color);
    background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
    color: var(--text-white);
  }

  .card-header .card-title {
    font-size: 20px;
    font-weight: 600;
    display: flex;
    align-items: center;
  }

  .card-header .card-title i {
    margin-right: 10px;
    font-size: 18px;
  }

  /* Card Body */
  .card-body {
    padding: 2rem;
  }

  /* Enhanced Form styling */
  .form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .form-group {
    margin-bottom: 1rem;
  }

  .form-group.full-width {
    grid-column: span 2;
  }

  label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    font-size: 14px;
    color: var(--text-dark);
  }

  .input-icon-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .input-icon {
    position: absolute;
    left: 12px;
    color: var(--text-light);
    font-size: 14px;
  }

  .form-control {
    width: 100%;
    padding: 12px 12px 12px 38px;
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    font-size: 14px;
    transition: var(--transition);
    color: var(--text-dark);
    background-color: #fff;
    height: 46px;
  }

  .form-control:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(58, 123, 213, 0.2);
  }

  .form-control:hover {
    border-color: var(--primary-light);
  }

  ::placeholder {
    color: var(--text-light);
    opacity: 0.7;
  }

  /* Enhanced buttons */
  .btn {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: var(--text-white);
    border: none;
    padding: 10px 16px;
    font-size: 14px;
    font-weight: 600;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: var(--transition);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 120px;
  }

  .btn-enlarged {
    padding: 12px 24px;
    font-size: 15px;
    min-width: 200px;
  }

  .btn i {
    margin-right: 8px;
    font-size: 16px;
  }

  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(58, 123, 213, 0.3);
  }

  .btn:active {
    transform: translateY(0);
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  }

  .btn-secondary {
    background: linear-gradient(135deg, #64748b, #94a3b8);
  }

  .btn-danger {
    background: linear-gradient(135deg, var(--danger-color), #f87171);
  }

  .btn-small {
    padding: 6px 10px;
    font-size: 13px;
  }

  .buttons-group {
    display: flex;
    gap: 10px;
    justify-content: flex-start;
  }

  /* Enhanced Table styling */
  .table-responsive {
    overflow-x: auto;
    border-radius: var(--radius-md);
  }

  .enhanced-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
  }

  .enhanced-table th,
  .enhanced-table td {
    padding: 14px 18px;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
  }

  .enhanced-table th {
    background-color: #f1f5f9;
    font-size: 14px;
    font-weight: 600;
    color: var(--text-dark);
    position: sticky;
    top: 0;
    z-index: 1;
  }

  .enhanced-table th:first-child {
    border-top-left-radius: var(--radius-md);
  }

  .enhanced-table th:last-child {
    border-top-right-radius: var(--radius-md);
  }

  .enhanced-table td {
    font-size: 14px;
    color: var(--text-dark);
  }

  .enhanced-table tr:last-child td:first-child {
    border-bottom-left-radius: var(--radius-md);
  }

  .enhanced-table tr:last-child td:last-child {
    border-bottom-right-radius: var(--radius-md);
  }

  .enhanced-table tr:hover {
    background-color: rgba(59, 130, 246, 0.05);
  }

  /* User cell in table */
  .user-cell {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .user-avatar-small {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-color: var(--primary-color);
    color: var(--text-white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 12px;
  }

  /* Enhanced badges */
  .badge {
    display: inline-flex;
    align-items: center;
    padding: 4px 8px;
    border-radius: 50px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
  }

  .badge i {
    margin-right: 4px;
    font-size: 10px;
  }

  .badge-success {
    background-color: rgba(16, 185, 129, 0.15);
    color: var(--success-color);
  }

  .badge-secondary {
    background-color: rgba(107, 114, 128, 0.15);
    color: #64748b;
  }

  /* Enhanced action buttons */
  .actions {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .btn-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    border-radius: var(--radius-sm);
    transition: all 0.2s ease;
    background-color: #f1f5f9;
    color: var(--text-dark);
    border: 1px solid var(--border-color);
    cursor: pointer;
  }

  .btn-edit:hover {
    background-color: var(--primary-color);
    color: var(--text-white);
    border-color: var(--primary-color);
  }

  .btn-delete:hover {
    background-color: var(--danger-color);
    color: var(--text-white);
    border-color: var(--danger-color);
  }

  /* Enhanced Edit form styling */
  .edit-form-row {
    display: none;
    background: #f8fafc;
  }

  .edit-form {
    padding: 1.5rem;
    border-radius: var(--radius-md);
    background: var(--card-bg);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--border-color);
    margin: 0.5rem 0;
  }

  .edit-form-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--border-color);
  }

  /* Media queries for responsiveness */
  @media (max-width: 992px) {
    .sidebar {
      transform: translateX(-100%);
    }

    .sidebar.show {
      transform: translateX(0);
    }

    .main-content {
      margin-left: 0;
      width: 100%;
    }

    .form-grid {
      grid-template-columns: 1fr;
    }

    .form-group.full-width {
      grid-column: span 1;
    }

    .buttons-group {
      flex-direction: column;
    }
  }

  /* Toggle button for sidebar */
  .sidebar-toggle {
    position: fixed;
    top: 20px;
    left: 20px;
    z-index: 11;
    background: var(--primary-color);
    color: white;
    border: none;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    box-shadow: var(--shadow-md);
    display: none;
    align-items: center;
    justify-content: center;
    cursor: pointer;
  }

  @media (max-width: 992px) {
    .sidebar-toggle {
      display: flex;
    }
  }

  /* Beautiful Generate ID Button Styling */
  .btn-generate {
    background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
    color: var(--text-white);
    border: none;
    padding: 10px 20px;
    font-size: 14px;
    font-weight: 600;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    margin-left: 10px;
  }

  .btn-generate:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(58, 123, 213, 0.3);
  }

  .btn-generate:active {
    transform: translateY(0);
  }
</style>
<body>
  <!-- Sidebar Toggle Button -->
  <button class="sidebar-toggle" id="sidebar-toggle">
    <i class="fas fa-bars"></i>
  </button>

  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <div class="sidebar-header">
      <div class="sidebar-logo">AdminPanel</div>
      <div class="sidebar-subtitle">User Management System</div>
    </div>

    <ul class="sidebar-menu">
      <li class="sidebar-menu-item">
        <a href="/" class="sidebar-menu-link">
          <i class="fas fa-home"></i>
          <span>Dashboard</span>
        </a>
      </li>
      <li class="sidebar-menu-item">
        <a href="/view-products" class="sidebar-menu-link">
          <i class="fas fa-boxes"></i>
          <span>Products</span>
        </a>
      </li>
      <li class="sidebar-menu-item">
        <a href="/sales" class="sidebar-menu-link">
          <i class="fas fa-shopping-cart"></i>
          <span>Sales</span>
        </a>
      </li>
      <li class="sidebar-menu-item">
        <a href="/expense" class="sidebar-menu-link">
          <i class="fas fa-receipt"></i>
          <span>Expenses</span>
        </a>
      </li>
      <li class="sidebar-menu-item">
        <a href="/view-products" class="sidebar-menu-link">
          <i class="fas fa-receipt"></i>
          <span>View/Edit Products</span>
        </a>
      </li>
    </ul>

    <div class="sidebar-footer">
      <p>Â© 2025 AdminPanel</p>
    </div>
  </div>

  <!-- Main Content Area -->
  <div class="main-content">
    <div class="dashboard-header">
      <h1 class="page-title">User Management</h1>
      <div class="user-info">
        <div class="user-avatar">A</div>
        <div>
          <div class="user-name">Admin</div>
          <div class="user-role">Master Administrator</div>
        </div>
      </div>
    </div>

    <!-- Create User Form Card -->
    <div class="card enhanced-card">
      <div class="card-header">
        <h2 class="card-title"><i class="fas fa-user-plus"></i> Create Sub-User Account</h2>
      </div>
      <div class="card-body">
        <form action="/create-user" method="POST">
          <div class="form-grid">
            <!-- Full Name -->
            <div class="form-group">
              <label for="name">Full Name</label>
              <div class="input-icon-wrapper">
                <i class="fas fa-user input-icon"></i>
                <input type="text" id="name" name="name" class="form-control" placeholder="Enter full name" required>
              </div>
            </div>
            <!-- Sub-User ID -->
            <div class="form-group">
              <label for="subUserId">Sub-User ID</label>
              <div class="input-icon-wrapper" style="display: flex;">
                <input type="text" id="subUserId" name="subUserId" class="form-control" placeholder="Generate sub-user ID" readonly required style="flex: 1;">
                <button type="button" onclick="generateSubUserId()" class="btn-generate">Generate ID</button>
              </div>
            </div>
            <!-- Password -->
            <div class="form-group">
              <label for="password">Password</label>
              <div class="input-icon-wrapper">
                <i class="fas fa-lock input-icon"></i>
                <input type="password" id="password" name="password" class="form-control" placeholder="Set a password" required>
              </div>
            </div>
            <!-- Confirm Password -->
            <div class="form-group">
              <label for="confirmPassword">Confirm Password</label>
              <div class="input-icon-wrapper">
                <i class="fas fa-lock input-icon"></i>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Confirm password" required>
              </div>
            </div>
            <!-- Submit Button -->
            <div class="form-group full-width">
              <button type="submit" class="btn btn-primary btn-enlarged">
                <i class="fas fa-user-plus"></i> Create Sub-User
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Existing Users Table Card -->
    <div class="card enhanced-card">
      <div class="card-header">
        <h2 class="card-title"><i class="fas fa-users"></i> Existing Users</h2>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table enhanced-table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Sub-User ID</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(user => { %>
                <tr>
                  <td>
                    <div class="user-cell">
                      <div class="user-avatar-small"><%= user.name.charAt(0) %></div>
                      <span><%= user.name %></span>
                    </div>
                  </td>
                  <td><%= user.subUserId %></td>
                  <td>
                    <% if (user.isMaster) { %>
                      <span class="badge badge-success"><i class="fas fa-crown"></i> Master</span>
                    <% } else { %>
                      <span class="badge badge-secondary"><i class="fas fa-user"></i> Sub-User</span>
                    <% } %>
                  </td>
                  <td>
                    <div class="actions">
                      <button class="btn-icon btn-edit" onclick="toggleEditForm('<%= user.id %>')" title="Edit User">
                        <i class="fas fa-edit"></i>
                      </button>
                      <% if (!user.isMaster) { %>
                        <form action="/delete-user" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');" style="margin:0;">
                          <input type="hidden" name="userId" value="<%= user.id %>">
                          <button type="submit" class="btn-icon btn-delete" title="Delete User">
                            <i class="fas fa-trash-alt"></i>
                          </button>
                        </form>
                      <% } %>
                    </div>
                  </td>
                </tr>
                <tr id="edit-<%= user.id %>" class="edit-form-row">
                  <td colspan="4">
                    <div class="edit-form">
                      <h3 class="edit-form-title">Edit User: <%= user.name %></h3>
                      <form action="/edit-user" method="POST">
                        <input type="hidden" name="userId" value="<%= user.id %>">
                        <div class="form-grid">
                          <!-- Name Field -->
                          <div class="form-group">
                            <label for="name-<%= user.id %>">Full Name</label>
                            <div class="input-icon-wrapper">
                              <i class="fas fa-user input-icon"></i>
                              <input type="text" id="name-<%= user.id %>" name="name" class="form-control" value="<%= user.name %>" placeholder="Enter full name" required>
                            </div>
                          </div>
                          <!-- New Password -->
                          <div class="form-group">
                            <label for="password-<%= user.id %>">New Password</label>
                            <div class="input-icon-wrapper">
                              <i class="fas fa-lock input-icon"></i>
                              <input type="password" id="password-<%= user.id %>" name="password" class="form-control" placeholder="Enter new password (leave blank to keep current)">
                            </div>
                          </div>
                          <!-- Confirm New Password -->
                          <div class="form-group">
                            <label for="confirmPassword-<%= user.id %>">Confirm New Password</label>
                            <div class="input-icon-wrapper">
                              <i class="fas fa-lock input-icon"></i>
                              <input type="password" id="confirmPassword-<%= user.id %>" name="confirmPassword" class="form-control" placeholder="Confirm new password">
                            </div>
                          </div>
                          <div class="form-group full-width buttons-group">
                            <button type="submit" class="btn btn-primary">
                              <i class="fas fa-save"></i> Update User
                            </button>
                            <button type="button" class="btn btn-secondary" onclick="toggleEditForm('<%= user.id %>')">
                              <i class="fas fa-times"></i> Cancel
                            </button>
                          </div>
                        </div>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Toggle edit form
    function toggleEditForm(userId) {
      var form = document.getElementById('edit-' + userId);
      form.style.display = (form.style.display === 'table-row') ? 'none' : 'table-row';
    }

    // Sidebar toggle
    document.getElementById('sidebar-toggle').addEventListener('click', function() {
      document.getElementById('sidebar').classList.toggle('show');
    });

    document.addEventListener('click', function(event) {
      const sidebar = document.getElementById('sidebar');
      const sidebarToggle = document.getElementById('sidebar-toggle');
      if (window.innerWidth <= 992 && !sidebar.contains(event.target) && !sidebarToggle.contains(event.target)) {
        sidebar.classList.remove('show');
      }
    });
  </script>
  <script src="/js/firebasePersistence.js" type="module"></script>
</body>
</html>

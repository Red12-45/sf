    <!-- Main Content -->
    <main class="content">
      <header class="page-header">
        <h1>Edit Product</h1>
      </header>
      <section class="form-container">
        <form action="/edit-product/<%= product.id %>" method="POST">
          <!-- Product Name -->
          <div class="form-row">
            <div class="form-group">
              <label for="productName">Product Name:</label>
              <input type="text" id="productName" name="productName" value="<%= product.productName %>" required>
            </div>
          </div>
          <!-- Prices and Quantity -->
          <div class="form-row">
            <div class="form-group">
              <label for="wholesalePrice">Wholesale Price:</label>
              <input type="number" step="0.01" id="wholesalePrice" name="wholesalePrice" value="<%= product.wholesalePrice %>" required>
            </div>
            <div class="form-group">
              <label for="retailPrice">Retail Price:</label>
              <input type="number" step="0.01" id="retailPrice" name="retailPrice" value="<%= product.retailPrice %>" required>
            </div>
            <div class="form-group">
              <label for="quantity">Quantity:</label>
              <input type="number" id="quantity" name="quantity" value="<%= product.quantity %>" required>
            </div>
          </div>
          <!-- Category Selection -->
          <div class="form-row">
            <div class="form-group">
              <label for="selectedCategory">Select Category:</label>
              <select id="selectedCategory" name="selectedCategory">
                <option value="">--Choose Existing Category--</option>
                <% categories.forEach(function(cat){ %>
                  <option value="<%= cat %>" <%= (product.category === cat) ? 'selected' : '' %>><%= cat %></option>
                <% }); %>
              </select>
            </div>
            <div class="form-group">
              <label for="newCategory">Or Create New Category:</label>
              <input type="text" id="newCategory" name="newCategory" placeholder="Enter new category if not in list">
            </div>
          </div>
          <!-- Note: The product ID is not editable; it is part of the URL and remains unchanged -->
          <button type="submit">Update Product</button>
        </form>
        <br>
        <a href="/view-products" class="back-link">Back to Products List</a>
      </section>
    </main>
  </div>
  <script src="/js/firebasePersistence.js" type="module"></script>
</body>
</html>

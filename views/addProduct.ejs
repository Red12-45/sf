  <link rel="stylesheet" href="/css/addProduct.css">
  <style>
    /* Basic inline style for hiding new product fields */
    .hidden { display: none; }
  </style>
</head>
<body>
  <div class="page-wrapper">
    <!-- Sidebar Navigation -->

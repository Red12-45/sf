      <table class="recurring-table" id="recurringTable">
        <thead>
          <tr>
            <th>Reason</th>
            <th>Amount&nbsp;â‚¹</th>
            <th>Method</th>
            <th style="text-align:center;">Action</th>
          </tr>
        </thead>
        <tbody>
          <% recList.forEach(r => { %>
          <tr data-id="<%= r.id %>">
  <!-- Reason â€“ inline editable -->

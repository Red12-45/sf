  <td><%= e.expenseDetail1 || '-' %></td>
  <td><%= e.expenseDetail2 || '-' %></td>
  <td><%= created.toLocaleTimeString() %></td>

  <!-- Delete -->
  <td style="text-align:center;">
    <% if (canDelete) { %>
      <i class="fas fa-trash-alt delete-expense-btn"
         data-id="<%= e.id %>" data-date="<%= d %>"></i>
    <% } %>
  </td>
</tr>

                <% }) %>

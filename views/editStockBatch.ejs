          <div class="form-group">
            <label for="selectedUnit">ChooseÂ Unit</label>
            <select id="selectedUnit" name="selectedUnit">
              <option value="">-- Select Unit --</option>
              <% units.forEach(u=>{ %>
                <option value="<%= u %>" <%= (product.unit||'').toLowerCase()===u?'selected':'' %>><%= u %></option>
              <% }) %>
            </select>
          </div>
          <div class="form-group">
            <label for="newUnit">OrÂ Create Unit</label>
            <input type="text" id="newUnit" name="newUnit" placeholder="e.g.Â kg,Â pcs">
          </div>
        </div>

        <!-- â”€â”€ Pricing & Quantity â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->

        <div class="form-row">
          <div class="form-group full-width">
            <label for="productName">ProductÂ Name</label>
            <input type="text" id="productName" name="productName"
                   value="<%= product.productName %>" required>
          </div>
        </div>

        <!-- â”€â”€ Category choose / create â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->

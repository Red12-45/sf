          <div class="form-group">
            <label for="quantity">Quantity</label>
            <input type="number" step="any" id="quantity" name="quantity"
                   value="<%= batch.quantity %>" required>
          </div>
        </div>

        <button type="submit">UpdateÂ Batch</button>

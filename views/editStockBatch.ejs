    <!-- Main Content -->
    <main class="content">
      <header class="page-header">
        <h1>Edit Stock Batch for "<%= product.productName %>"</h1>
      </header>
      <section class="form-container">
        <!-- Form to edit the specific stock batch -->
        <form action="/edit-stock-batch/<%= batch.id %>" method="POST">
          <!-- Editable Product Name Field -->
          <div class="form-row">
            <div class="form-group">
              <label for="productName">Product Name:</label>
              <input type="text" id="productName" name="productName" value="<%= product.productName %>" required>
            </div>
          </div>
          <!-- New fields for Product ID and Category -->
          <div class="form-row">
            <div class="form-group">
              <label for="productId">Product ID:</label>
              <input type="text" id="productId" name="productId" 
                value="<%= batch.batchProductId ? batch.batchProductId : (product.productId || '-') %>">
            </div>
            <div class="form-group">
              <label for="selectedCategory">Category:</label>
              <select id="selectedCategory" name="selectedCategory">
                <option value="">-- Select Category --</option>
                <% categories.forEach(function(cat) { %>
                  <option value="<%= cat %>" <%= product.category === cat ? 'selected' : '' %>><%= cat %></option>
                <% }); %>
              </select>
            </div>
          </div>
          <!-- Field to enter a new category if needed -->
          <div class="form-row">
            <div class="form-group full-width">
              <label for="newCategory">Or Enter New Category:</label>
              <input type="text" id="newCategory" name="newCategory" placeholder="Enter new category">
            </div>
          </div>
          <!-- Batch details: Purchase Price, Retail Price, Quantity -->
          <div class="form-row">
            <div class="form-group">
              <label for="purchasePrice">Purchase Price:</label>
              <input type="number" step="0.01" id="purchasePrice" name="purchasePrice" value="<%= batch.purchasePrice %>" required>
            </div>
            <div class="form-group">
              <label for="salePrice">Retail Price:</label>
              <input type="number" step="0.01" id="salePrice" name="salePrice" value="<%= batch.salePrice %>" required>
            </div>
            <div class="form-group">
              <label for="quantity">Quantity:</label>
              <!-- Modified step attribute for decimal input -->
              <input type="number" step="any" id="quantity" name="quantity" value="<%= batch.quantity %>" required>
            </div>
          </div>
          <button type="submit">Update Batch</button>
        </form>
        <br>
        <a href="/view-products" class="back-link">Back to Products List</a>
      </section>
    </main>
